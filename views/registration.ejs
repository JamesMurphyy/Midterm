  </head>
  <body>
    <%- include('partials/_header') %>

    <main style="margin: 1em;">
      <h3>Create an Account</h3>
      <form class="form-inline" action="/register" method="POST">
        <div class="form-group mb-2">
          <label for="email">Name: </label>
          <input class="form-control" name="name" placeholder="name" style="width: 300px; margin: 1em">
          <label for="email">Enter an Email: </label>
          <input class="form-control" type="email" name="email" placeholder="example@email.com" style="width: 300px; margin: 1em">
          <label for="password">Enter a Password:</label>
          <input class="form-control" type="password" name="password" placeholder="Enter Password" style="width: 300px; margin: 1em">
          <button type="submit" class="btn btn-primary">Register</button>
        </div>
      </form>
    </main>
    <footer>
      <p>Copyright &copy; <script> document.write(new Date().getFullYear()); </script>, Platform <Buy>
      <Sell></Sell></p>
    </footer>
